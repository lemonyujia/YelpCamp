<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div style="width: 40%; margin: 30px auto">
            <h1 class="jumbotron-heading" style="text-align: center">Add new Comment to <%= campground.name %></h1>
            <form action="/campgrounds/<%= campground.id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
                </div>
            </form>
        <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

